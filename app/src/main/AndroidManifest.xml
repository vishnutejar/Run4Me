<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.run4me">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Run4Me">
        <activity android:name=".activitys.HomeActivity"></activity>
        <activity android:name=".activitys.RegistrationStatusActivity" />
        <activity android:name=".activitys.RegisterationActivity" />
        <activity android:name=".activitys.NotificationsActivity" />
        <activity android:name=".activitys.TermsAndConditionActivity" />
        <activity android:name=".activitys.ResetYourPasswordActivity" />
        <activity android:name=".activitys.ForgotPasswordActivity" />
        <activity android:name=".activitys.VerifyCodeActivity" />
        <activity android:name=".activitys.OTPActivity" />
        <activity android:name=".activitys.LoginActivity" />
        <activity android:name=".activitys.PreLoginActivity" />
        <activity android:name=".activitys.IntroActivity" />
        <activity
            android:name=".activitys.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>